<div>
  <a href="/dashboard/create/"></a>

  <h2 class="title">Your Posts</h2>
  <hr>

  {{#if posts.length}}
    {{#each posts as |post|}}
      {{> posts post}}
      <a class="a" href="/dashboard/edit/{{post.id}}">
        <button class="button">Edit Post</button>
      </a>
    {{/each}}
  {{else}}
    <h6>You do not have any posts.</h6>
  {{/if}}
</div>