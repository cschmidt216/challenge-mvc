<div class="mb-5 pt-3">
  <a href="/dashboard/create/">
  </a>

  <h2 class="title pb-4">Your Posts</h2>
  <hr>

{{#if posts.length}}
  {{#each posts as |post|}}
    {{> posts post}}
    <a href="/dashboard/edit/{{post.id}}">
      <button class="button mb-5 ml-5 is-warning">Edit Post</button>
    </a>
  </div>
  {{/each}}
{{else}}
  <h6 class="pb-4 has-text-centered is-italic">You do not have any posts.</h6>
{{/if}}
</div>